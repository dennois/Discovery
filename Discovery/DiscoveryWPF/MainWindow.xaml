<Window x:Class="DiscoveryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscoveryWPF"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Title="Discovery" Height="90" Width="90" ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="Manual"  Topmost="True">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Grid>
        <Button Background="Transparent" Name="btnAV" Click="btnAV_Click" IsEnabled="True">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border BorderThickness="0">
                        <ContentPresenter Margin="{TemplateBinding Padding}"
      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
      RecognizesAccessKey="True"
      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Image Source="Images/discovery_bot.png"></Image>
        </Button>
       
    </Grid>
</Window>
